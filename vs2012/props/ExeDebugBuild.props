      <AdditionalDependencies>d3dx9d.lib;d3dx10d.lib;DxErr.lib;dxut.lib;Comctl32.lib;%(AdditionalDependencies)</AdditionalDependencies>
    </Link>
  </ItemDefinitionGroup>
  <ItemGroup />
